#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------
log.threshold = 4 # 0 = No logging, 1 = Error, 2 = Debug, 3 = Informational, 4 = All messages
log.path = "writable/logs"
log.dateFormat = "Y-m-d H:i:s"

#--------------------------------------------------------------------
# CACHING
#--------------------------------------------------------------------
# cache.adapter = file
# cache.defaultTTL = 3600
# cache.useFileLocking = true

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------
session.driver = CodeIgniter\Session\Handlers\FileHandler
session.cookieName = ci_session
session.expiration = 7200
session.savePath = writable/sessions
session.matchIP = 0
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# CSRF
#--------------------------------------------------------------------
csrf.tokenName = csrf_test_name
csrf.cookieName = csrf_cookie_name
csrf.expire = 7200
csrf.regenerate = true

